each val in programs
  - var set_class = ( val.module ? 'module-main' : 'module' )
  - var set_bg = ( val.module ? 'background-color: ' + val.module.color : '' )
  .col-sm-4
    h2= val.title
      if val.main
        span.home (home)
    div(class=set_class)
      div(class='panel panel-default')
        div(class='panel-heading', style=set_bg)
          h4.panel-title= val.description
        .panel-body
          .campus
            if val.module
              a(href="#")
                img(src=val.module.img, height="100%", width="100%")
                .meta-info
                  div(class='glass', style=set_bg)
                  #textarea
                    h4 #{val.module.city}
                    h6 #{val.module.country}
                  unless val.main
                    a(href='#', data-toggle="modal", data-target='#campusModal', data-title=val.title, data-id=val.id)
                      div(class='reselect', style=set_bg)
                        img(src="./img/click.png", class="invert", style="padding-top: 25px;" height='50', width='40')
            else
              a(href='#', data-toggle="modal", data-target='#campusModal', data-title=val.title, data-id=val.id)
                img(src="./img/click.png", height='50', width='50')
                p Click to choose a campus

div(class="modal fade", id="campusModal", tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
  .modal-dialog
    .modal-content
      .modal-header
        button(type="button", class="close", data-dismiss="modal", aria-label="Close")
          span(aria-hidden="true") Cancel &times;
        h4(class="modal-title", id="myModalLabel") Select your campus rotation
      .modal-body
        h5.module-title
        .row.module-content
      .modal-footer
